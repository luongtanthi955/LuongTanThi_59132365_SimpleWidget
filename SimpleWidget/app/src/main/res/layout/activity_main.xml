<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tên của bạn :" />

    <EditText
        android:id="@+id/name"
        android:hint="Nhập tên của bạn:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ngày sinh:" />

    <EditText
        android:id="@+id/birthday"
        android:hint="Nhập ngày sinh của bạn:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Giới Tính :" />


    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/Nam"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nam" />

        <RadioButton
            android:id="@+id/Nu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nữ" />
    </RadioGroup>
    <TextView
        android:textSize="20dp"
        android:text="Sở Thích Của Bạn:"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/xemphim"
        android:layout_marginLeft="20sp"
        android:textSize="20dp"
        android:text="Xem Phim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/nghenhac"
        android:layout_marginLeft="20sp"
        android:textSize="20dp"
        android:text="Nghe Nhạc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/cf"
        android:layout_marginLeft="20sp"
        android:textSize="20dp"
        android:text="Đi cafe với bạn bè"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/onha"
        android:layout_marginLeft="20sp"
        android:textSize="20dp"
        android:text="Ở nhà một mình"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <CheckBox
        android:id="@+id/nauan"
        android:layout_marginLeft="20sp"
        android:textSize="20dp"
        android:text="Vào bếp nấu ăn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textSize="20dp"
        android:text="Sở Thích Khác"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/favourite"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:hint="Nhập sở thích khác:"
        android:textSize="25dp" />

    <Button
        android:id="@+id/XacNhan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Xác Nhận" />

</LinearLayout>